# Fastfile for iOS deployment

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Fastlane will automatically use these environment variables:
    # - APP_STORE_CONNECT_API_KEY_KEY_ID
    # - APP_STORE_CONNECT_API_KEY_ISSUER_ID
    # - APP_STORE_CONNECT_API_KEY_KEY
    # No need to explicitly call app_store_connect_api_key()
    
    # Use build number from environment (GitHub run number) or increment local
    if ENV['BUILD_NUMBER']
      new_build = ENV['BUILD_NUMBER'].to_i
      UI.message("Using build number from environment: #{new_build}")
    else
      # Fallback to local build number increment
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
      UI.message("Using incremented local build number: #{new_build}")
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # For CI: Disable automatic signing and use manual signing with provided certificates
    if ENV['CI']
      # Update project settings for manual signing
      update_code_signing_settings(
        use_automatic_signing: false,
        path: "Runner.xcodeproj",
        targets: ["Runner"],
        code_sign_identity: "Apple Distribution",
        profile_uuid: ENV['PROVISIONING_PROFILE_UUID']
      )
    end
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false
      }
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )
    
    # Clean up
    clean_build_artifacts
  end
  
  desc "Build the app for App Store submission"
  lane :release do
    # Fastlane will automatically use environment variables
    
    # For CI: Disable automatic signing
    if ENV['CI']
      # Update project settings for manual signing
      update_code_signing_settings(
        use_automatic_signing: false,
        path: "Runner.xcodeproj",
        targets: ["Runner"],
        code_sign_identity: "Apple Distribution",
        profile_uuid: ENV['PROVISIONING_PROFILE_UUID']
      )
    end
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false
      }
    )
    
    # Upload to App Store Connect
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    # Clean up
    clean_build_artifacts
  end
end
