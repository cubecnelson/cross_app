# Fastfile for iOS deployment (Certificate-Based)

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight (Certificate-Based)"
  lane :beta do
    # For certificate-based approach, we use manual signing
    # Certificates and profiles are already set up in the workflow
    
    # Use build number from environment (GitHub run number) or increment local
    if ENV['BUILD_NUMBER']
      new_build = ENV['BUILD_NUMBER'].to_i
      UI.message("Using build number from environment: #{new_build}")
    else
      # Fallback to local build number increment
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
      UI.message("Using incremented local build number: #{new_build}")
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # Build the app with manual signing using certificates and profiles
    # For certificate-based approach, we use manual signing
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false,
        teamID: ENV['TEAM_ID'],
        signingStyle: "manual",
        provisioningProfiles: {
          # Bundle ID mapped to provisioning profile name
          "com.cross.app" => "AppStore"  # Should match your provisioning profile name
        }
      }
    )
    
    # Upload to TestFlight - Fastlane auto-uses environment variables
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )
    
    # Clean up
    clean_build_artifacts
  end
  
  desc "Build the app for App Store submission (Certificate-Based)"
  lane :release do
    # For certificate-based approach, we use manual signing
    
    # Use build number from environment (GitHub run number) or increment local
    if ENV['BUILD_NUMBER']
      new_build = ENV['BUILD_NUMBER'].to_i
      UI.message("Using build number from environment: #{new_build}")
    else
      # Fallback to local build number increment
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
      UI.message("Using incremented local build number: #{new_build}")
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # Build the app with manual signing
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false,
        teamID: ENV['TEAM_ID'],
        signingStyle: "manual",
        provisioningProfiles: {
          "com.cross.app" => "AppStore"  # Should match your provisioning profile name
        }
      }
    )
    
    # Upload to App Store Connect - Fastlane auto-uses environment variables
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    # Clean up
    clean_build_artifacts
  end
end