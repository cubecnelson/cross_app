# Fastfile for iOS deployment (Automatic Signing)

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight (Automatic Signing)"
  lane :beta do
    # For automatic signing approach, we use API key authentication
    # Fastlane will automatically manage certificates and profiles
    
    # Use build number from environment (GitHub run number) or increment local
    if ENV['BUILD_NUMBER']
      new_build = ENV['BUILD_NUMBER'].to_i
      UI.message("Using build number from environment: #{new_build}")
    else
      # Fallback to local build number increment
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
      UI.message("Using incremented local build number: #{new_build}")
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # Build the app with automatic signing using API key
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false,
        teamID: ENV['TEAM_ID'],
        signingStyle: "automatic",
        provisioningProfiles: {
          # For automatic signing, we don't specify profile names
          # Xcode will automatically manage them
          "com.cross.app" => ""
        }
      },
      xcargs: "-allowProvisioningUpdates"
    )
    
    # Upload to TestFlight - Fastlane auto-uses environment variables
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )
    
    # Clean up
    clean_build_artifacts
  end
  
  desc "Build the app for App Store submission (Automatic Signing)"
  lane :release do
    # For automatic signing approach
    
    # Use build number from environment (GitHub run number) or increment local
    if ENV['BUILD_NUMBER']
      new_build = ENV['BUILD_NUMBER'].to_i
      UI.message("Using build number from environment: #{new_build}")
    else
      # Fallback to local build number increment
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
      UI.message("Using incremented local build number: #{new_build}")
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # Build the app with automatic signing
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        uploadSymbols: true,
        uploadBitcode: false,
        teamID: ENV['TEAM_ID'],
        signingStyle: "automatic",
        provisioningProfiles: {
          "com.cross.app" => ""
        }
      },
      xcargs: "-allowProvisioningUpdates"
    )
    
    # Upload to App Store Connect - Fastlane auto-uses environment variables
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    # Clean up
    clean_build_artifacts
  end
  
  desc "Setup for automatic signing with API key"
  lane :setup_auto_signing do
    # Configure project for automatic signing
    update_project_team(
      path: "Runner.xcodeproj",
      teamid: ENV['TEAM_ID']
    )
    
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "Runner.xcodeproj",
      team_id: ENV['TEAM_ID'],
      targets: ["Runner"],
      code_sign_identity: "Apple Development"
    )
    
    UI.success("Project configured for automatic signing")
  end
  
  desc "Check signing configuration"
  lane :check_signing do
    # Check current signing configuration
    UI.message("Checking signing configuration...")
    
    get_info_plist_value(
      path: "Runner/Info.plist",
      key: "CFBundleIdentifier"
    )
    
    get_provisioning_profile
  end
end