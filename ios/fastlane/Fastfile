# Fastfile for iOS deployment

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Fastlane will automatically use these environment variables:
    # - APP_STORE_CONNECT_API_KEY_KEY_ID
    # - APP_STORE_CONNECT_API_KEY_ISSUER_ID
    # - APP_STORE_CONNECT_API_KEY_KEY
    # No need to explicitly call app_store_connect_api_key()
    
    # Increment build number based on TestFlight
    # Get the latest build number from TestFlight, default to 0 if none exists
    begin
      latest_build = latest_testflight_build_number
      new_build = latest_build + 1
    rescue => ex
      UI.message("No TestFlight builds found or error fetching: #{ex.message}")
      UI.message("Using build number from Xcode project")
      new_build = get_build_number(xcodeproj: "Runner.xcodeproj").to_i + 1
    end
    
    increment_build_number(
      xcodeproj: "Runner.xcodeproj",
      build_number: new_build
    )
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        signingStyle: "manual"
      },
      xcargs: "-allowProvisioningUpdates"
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false
    )
    
    # Clean up
    clean_build_artifacts
  end
  
  desc "Build the app for App Store submission"
  lane :release do
    # Fastlane will automatically use environment variables
    
    # Build the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build/Runner",
      output_name: "Runner.ipa",
      clean: true,
      export_options: {
        method: "app-store",
        signingStyle: "manual"
      },
      xcargs: "-allowProvisioningUpdates"
    )
    
    # Upload to App Store Connect
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    # Clean up
    clean_build_artifacts
  end
end
